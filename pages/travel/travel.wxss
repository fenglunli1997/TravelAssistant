/* pages/Travel/Travel.wxss */
.weather_bar{
  background-color: lightblue;
  width: 100%;
  height:auto;
}
.weather_intro{
  font-size:12px;
  font-weight: bold;
}
.weather{
  font-size: 10px;
  color: gray;
}
.item{
  display: flex;
  width: 100%;
  flex-direction: row;
  border-top: 1px solid lightgray;
}
.name{
  font-weight: bold;
  font-size: 18px;
  margin-top: 5px;
  margin-bottom: 5px;
}
.count{
  display: flex;
  flex-direction: row;
  font-size: 10px;
  /* text-align: center; */
  align-self: center;
  color: #999999;
  margin-top: 3px;
  margin-bottom: 3px;
}
.like{
  position: absolute;
  right: 10px;
  /* top: 10px; */
}
.likeButton{
  /* float: left; */
  height: 10px;
  width: 10px;
}
.intro{
  /* font-weight: bold; */
  color: gray;
  font-size: 10px;
  margin-top: 12px;
  margin-bottom: 5px;
}
.array{
  position: absolute;
  align-self: center;
  right: 10px;
  max-width: 30px;
  max-height: 30px;
}
.picture{
  max-width: 25%;
  max-height: 90px;
  float: left;
  margin-left: 5px;
  margin-right: 5px;
}