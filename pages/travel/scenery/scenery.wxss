/* pages/travel/scenery/scenery.wxss */
.weather{
  /* color: white; */
  position: absolute;
  top: 15px;
  left: 18px;
}
.place{
  font-size: 22px;
  font-weight: bold;
}
.tempereture{
  font-size: 12px;
  font-weight: bold;
  margin-top: 5px;
}
.diary_title{
  width: 100%;
  height: 30px;
  line-height: 30px;
  font-size: 12px;
  font-weight: bold;
  margin-left: 5px;
}
.diary_picture{
  margin: 5px;
  margin-top: 0px;
  height: 150px;
}
.array{
  position: absolute;
  align-self: center;
  right: 10px;
  max-width: 30px;
  max-height: 30px;
}
.title{
  font-weight: bold;
  font-size: 20px;
  margin-left: 8px;
  margin-top: 10px;
  margin-bottom: 5px;
}
.item{
  margin-left: 5px;
  max-width: 80px;
  display: flex;
  flex-direction: row;
  float: left;
}
.picture{
  max-height: 80px;
  max-width: 80px;
}
.name{
  max-width: 80px;
  text-align: center;
  font-size: 12px;
}
.attention{
  margin-left: 10px;
  margin-bottom: 10px;
  font-size: 12px;
  font-weight: bold;
}