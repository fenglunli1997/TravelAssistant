.item{
  display: flex;
  flex-direction: row;
  margin-top: 10px;
  margin-bottom: 10px;
}
.name{
  font-weight: bold;
  font-size: 15px;
  margin-top: 5px;
  margin-bottom: 5px;
}
.count{
  display: flex;
  flex-direction: row;
  font-size: 10px;
  color: #999999;
  margin-top: 3px;
  margin-bottom: 3px;
}
.picture{
  max-width: 25%;
  max-height: 80px;
  float: left;
  margin-left: 5px;
  margin-right: 5px;
  align-self: center;
}