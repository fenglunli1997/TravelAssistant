/* pages/food/restaurant/restaurant.wxss */
.ad{
  height: 180px;
}
.introduce{
  margin-top: 5px;
  margin-left: 15px;
  display: flex;
  flex-direction: row;
}
.name{
  font-weight: bold;
  font-size: 20px;
  margin-top: 5px;
  margin-bottom: 5px;
}
.count{
  display: flex;
  flex-direction: row;
  font-size: 10px;
  color: #999999;
  margin-top: 3px;
  margin-bottom: 3px;
}
.locate{
  align-self: center;
  max-width: 20px;
  max-height: 20px;
  margin-right: 5px;
}
.location{
  font-weight: bold;
  margin-top: 10px;
  font-size: 12px;
}
.phone{
  position: absolute;
  align-self: center;
  right: 20px;
  max-width: 30px;
  max-height: 30px;
}
.title{
  display: flex;
  flex-direction: row;
  margin-top: 10px;
  margin-left: 8px;
}
.more{
  align-self: center;
  position: absolute;
  right: 20px;
  font-size: 12px;
  color: blue;
}
.item{
  margin-left: 5px;
  max-width: 80px;
  /* height: 50px; */
  display: flex;
  flex-direction: row;
  float: left;
}
.food{
  max-height: 80px;
  max-width: 80px;
}
.food_name{
  max-width: 80px;
  text-align: center;
  font-size: 12px;
  /* color: lightgray; */
}
.pingjia_item{
  display: flex;
  flex-direction: row;
}
.pingjia_img{
  max-height: 50px;
  max-width: 50px;
  margin-top: 10px;
  margin-left: 10px;
  margin-right: 10px;
}
.pingjia_name{
  font-weight: bold;
  font-size: 14px;
}
.pingjia_time{
  position: absolute;
  right: 8px;
  font-size: 10px;
  color: lightgray;
  align-self: center;
}
.pingjia_info{
  margin-top: 5px;
  font-size: 10px;
}